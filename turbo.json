{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "tasks": {
        "dev": {
            "persistent": true,
            "cache": false,
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env.local",
                ".env"
            ]
        },
        "build": {
            "inputs": [
                "src",
                "**/*.ts",
                "package.json"
            ],
            "cache": true
        } 
    }
}